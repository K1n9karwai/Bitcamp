package abstract_1;

import java.util.Calendar;
import java.util.Scanner;

public class CalendarTest {

	private int year;
	private int month;
	private int endDate;
	private int dayOfWeek;
	
	Calendar cal = Calendar.getInstance();
	
	public CalendarTest() {
		Scanner scan = new Scanner(System.in);

		System.out.print("년도 입력 : ");
		this.year = scan.nextInt();
		System.out.print("월 입력 : ");
		this.month = scan.nextInt();
		
		calculator();
		//display();
	}
	
	public void calculator() {
		
//		int year = cal.get(this.year);
//		int month = cal.get(this.month);
		cal.set(this.year, this.month-1, 1);
		
		this.endDate = cal.getActualMaximum(Calendar.DATE);
		this.dayOfWeek = cal.get(Calendar.DAY_OF_WEEK);
		System.out.println(this.endDate);
		System.out.println(this.dayOfWeek);
		
		
	}
	
	public void display() {
		System.out.println("======= " + this.year + "년 " + this.month + "월 달력 =======" );
		System.out.println("일\t월\t화\t수\t목\t금\t토");
		for(int i=1; i<=this.endDate; i++) {
			cal.set(Calendar.DATE, i);
			//for(int)
		}
		
	}

}
